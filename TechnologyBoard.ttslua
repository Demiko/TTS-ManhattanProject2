function setup(length)
  for i=1,#token do
    token[i] = getObjectFromGUID(token[i])
  end

  for i=1,10 do
    local r = math.ceil(3*math.random())
    token[r],token[r+1]=token[r+1],token[r]
  end

  local pos = token_positions[length]
  for i=1,#token do
    local rot = self.getRotation()
    rot.y = rot.y + pos[i].r
    token[i].setPositionSmooth(self.positionToWorld(pos[i]), false, true)
    token[i].setRotationSmooth(rot, false, true)
    token[i].setLock(true)
  end
end

function cb(x)
  return x
